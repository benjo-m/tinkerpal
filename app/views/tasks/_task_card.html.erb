<div class="mb-4 p-3 rounded-md border shadow-xs border-gray-200">
  <div class="flex justify-between">
    <p><strong>Title:</strong> <%= truncate(task.title, length: 30) %></p>
    <div class="flex gap-1">
      <i class="bi bi-geo-alt-fill"></i>
      <%= task.city.name %>
    </div>
  </div>
  <p><strong>Posted:</strong> <%= time_ago_in_words(task.created_at) %> ago</p>
  <p><strong>Category:</strong> <%= task.task_category.name %> </p>
  <div class="flex justify-end mt-2">
    <%= link_to "View details", task, data: { turbo_frame: "_top" }, class: "gray-button" %>
  </div>
</div>
