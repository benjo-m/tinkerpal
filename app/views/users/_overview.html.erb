  <%= turbo_frame_tag "my_work" do %>
  <div>
    <div class="mt-4">
      <p><strong>Tasks completed</strong></p>
      <div class="bg-gray-100 px-1 py-2 rounded-md mt-1">
        <%= tasks_completed %>
      </div>
    </div>
    <div class="mt-4">
      <p><strong>Average price</strong></p>
      <div class="bg-gray-100 px-1 py-2 rounded-md mt-1">
        <% if tasks_completed > 0 %>
          <%= average_price %> BAM
        <% else %>
          0.0
        <% end %>
      </div>
    </div>
    <div class="mt-4 mb-4">
      <p><strong>Average rating</strong></p>
      <div class="bg-gray-100 px-1 py-2 rounded-md mt-1">
        <% if tasks_completed > 0%>
          <%= average_rating %>
        <% else %>
          0.0
        <% end %>
      </div>
    </div>
    <h1 class="mb-1 font-bold">
      Reviews
    </h1>
    <% if reviews.count > 0 %>
      <% reviews.each do |review| %>
        <%= render "review_card", review: review %>
      <% end %>
      <br>
      <%== pagy_nav(@pagy_reviews) %>
    <% else %>
      <p class="text-gray-400">No reviews</p>
    <% end %>
  </div>
<% end %>