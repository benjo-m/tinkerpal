<div class="mb-4 p-3 rounded-md border-2 border-gray-300">
  <div class="flex justify-between">
    <p><strong>Username:</strong> <%= truncate(user.username, length: 30) %></p>
    <div class="flex gap-1">
      <i class="bi bi-geo-alt-fill"></i>
      <%= user.city.name %>
    </div>
  </div>
  <p><strong>Tasks completed:</strong> <%= user.reviews_count %> </p>
  <p><strong>Average rating:</strong> <%= user.average_rating.nil? ? 0.0 : user.average_rating %> </p>
  <p><strong>Average price:</strong> <%= user.average_price.nil? ? 0.0 : user.average_price %> </p>
  <div class="flex gap-2">
    <strong>Skills:</strong>
    <div class="flex gap-2">
      <% user.skills.each do |skill| %>
        <span class="bg-amber-100 border-1 border-amber-200 text-gray-800 font-semibold text-sm px-2 py-1 rounded-full"><%= skill.name %></span>
      <% end %>
    </div>
  </div>
  <div class="flex justify-end mt-2">
    <%= link_to "View profile", user, data: { turbo_frame: "_top" }, class: "gray-button" %>
  </div>
</div>
