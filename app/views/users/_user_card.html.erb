<div class="mb-4 p-3 rounded-md border-2 border-gray-300">
  <div class="flex justify-between">
    <p><strong>Username:</strong> <%= truncate(user.username, length: 30) %></p>
    <div class="flex gap-1">
      <i class="bi bi-geo-alt-fill"></i>
      <%= user.city.name %>
    </div>
  </div>
  <p><strong>About me:</strong> <%= user.about_me ? user.about_me : "User doesn't have a bio" %></p>
  <p><strong>Skills:</strong> Plumbing </p>
  <div class="flex justify-end mt-2">
    <%= link_to "View profile", user, data: { turbo_frame: "_top" }, class: "gray-button" %>
  </div>
</div>
