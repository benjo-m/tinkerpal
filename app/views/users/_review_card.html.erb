<div class="bg-gray-100 p-2 rounded-md mt-4">
  <p class="font-bold mb-2">Task: <span class="underline"><%= link_to review.task.title, review.task %></span></p>
  <p class="mb-2">
    <% if review.comment.blank? %>
      <p class="mb-2 text-gray-400">No comment</p>
    <% else %>
      <p class="mb-2"><%= review.comment %></p>
    <% end %>
  </p>
  Rating:
  <% review.rating.times do %>
    <i class="bi bi-star-fill text-yellow-500"></i>
  <% end %>
  <% (5 - review.rating).times do %>
    <i class="bi bi-star text-yellow-500"></i>
  <% end %>
</div>
